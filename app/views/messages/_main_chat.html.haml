.chat_main
  .main_header
    .main_header__box
      %p.main_header__box-name
        group name
      %p.main_header__box-member
        group member

    =link_to "#", class:"edit" do
      .main_header__edit-btn
        Edit

  .chat_message
    .chat_message__post
      .chat_message__post__user
        %p.chat_message__post__user-name
          name
        %p.chat_message__post__user-date
          2020/2/3(friday) 17:00:00
      %p.chat_message__post_text
        messeage
        
  .message_form

    .message_form__box

      .message_form__input
        %input.message_form__input-text{:type=>"text",:name=>"message",:placeholder=>"type a message"}
        %label{class: "message_form__input-image"} 
          = icon('fas', 'image')
          %input{:type=>"file", :class=>"message-image"}
      %input{:type => "submit" ,:class => "submit",:value=>"Send"}